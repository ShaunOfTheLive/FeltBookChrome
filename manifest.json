{
  "manifest_version": 2,

  "name": "FeltBook",
  "description": "This extension materializes Facebook",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://www.facebook.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["css/style.css", "css/materialize.min.css", "css/material-icons.css", "css/material-design-iconic-font.min.css"],
      "js": ["js/jquery-2.1.1.min.js", "js/materialize.min.js", "js/start.js"],
      "run_at": "document_start"
    }
  ]
}
